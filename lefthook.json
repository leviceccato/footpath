{
	"pre-commit": {
		"commands": {
			"check": {
				"run": "bunx biome check --no-errors-on-unmatched --files-ignore-unknown=true {push_files}"
			}
		}
	},
	"pre-push": {
		"parallel": true,
		"commands": {
			"type-check": {
				"run": "bun run type-check"
			}
		}
	},
	"ci": {
		"parallel": true,
		"commands": {
			"check": {
				"run": "bun run check"
			},
			"type-check": {
				"run": "bun run type-check"
			},
			"test": {
				"run": "bun test"
			}
		}
	}
}
