{
	"pre-push": {
		"commands": {
			"format": {
				"run": "bunx prettier --write {push_files}"
			},
			"lint": {
				"run": "bunx eslint --fix {push_files}"
			},
			"check": {
				"run": "bun run check"
			}
		}
	},
	"ci": {
		"parallel": true,
		"commands": {
			"format": {
				"run": "bun run format"
			},
			"lint": {
				"run": "bun run lint"
			},
			"check": {
				"run": "bun run check"
			},
			"test": {
				"run": "bun test"
			}
		}
	}
}
